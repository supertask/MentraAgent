{
  "name": "@realworld-agent/api-server",
  "version": "0.1.0",
  "private": true,
  "description": "統合APIサーバー - デバイス入力を受信し、GPU処理を統合",
  "type": "module",
  "scripts": {
    "dev": "bun --watch src/index.ts",
    "build": "tsc",
    "start": "bun dist/index.js",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:migrate:prod": "prisma migrate deploy",
    "db:studio": "prisma studio",
    "db:seed": "bun src/prisma/seed.ts",
    "test": "bun test",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@fastify/cors": "^10.0.1",
    "@fastify/multipart": "^9.0.1",
    "@fastify/websocket": "^11.0.1",
    "@prisma/client": "^6.1.0",
    "@realworld-agent/shared": "workspace:*",
    "archiver": "^7.0.1",
    "dotenv": "^16.4.7",
    "fastify": "^5.2.0",
    "ioredis": "^5.4.2",
    "winston": "^3.17.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/archiver": "^6.0.4",
    "@types/node": "^22.10.2",
    "@types/ws": "^8.5.13",
    "bun-types": "^1.1.38",
    "prisma": "^6.1.0",
    "typescript": "^5.7.2"
  }
}
